@using WebMypham.Areas.Admin.Model;
@{
    ViewBag.Title = "KemTriMun";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<Sanpham> listKemTriMun = ViewBag.KemTriMun;
}

<div class="home-product">
    <div class="grid__row">
        @foreach (var item in listKemTriMun)
        {
        <div class="grid__column-2-4">
            <a class="home-product-item" href="@Url.Action("ChiTietSanPham","Home",new { id = item.TeSP}) ">
                <div class="home-product-item__img" style="        background-image: url(/Assets/img/@item.Hinhanh);"></div>
                <h4 class="home-product-item__name">@item.TeSP</h4>
                <div class="home-product-item__price">
                    <span class="home-product-item__price-old">@item.Giacu.ToString("#,##")<span>đ</span></span>
                    <span class="home-product-item__price-current">@item.Giamoi.ToString("#,##")<span>đ</span></span>
                </div>
                <div class="home-product-item__action">
                    <span class="home-product-item__like home-product-item__like--liked">
                        <i class="home-product-item__like-icon-empty far fa-heart"></i>
                        <i class="home-product-item__like-icon-fill fas fa-heart"></i>
                    </span>
                    <a class="home-product-item__sold" href="@Url.Action("ThemGioHang", "GioHang", new { @MaSP = item.SanphamID, @strURL = Request.Url.ToString() }) "> THÊM VÀO GIỎ HÀNG</a>
                </div>
                <div class="home-product-item__origin">
                    <span class="home-product-item__origin-name">@item.Nhacungcap.TenNCC</span>
                </div>
            </a>
        </div>
        }
    </div>
</div>